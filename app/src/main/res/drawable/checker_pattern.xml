<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base layer: light square color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFCE9E" /> <!-- Light tan color for light squares -->
        </shape>
    </item>

    <!-- Pattern layer: dark squares -->
    <item>
        <bitmap
            android:src="@drawable/checker_grid"
            android:tileMode="repeat" />
    </item>
</layer-list>